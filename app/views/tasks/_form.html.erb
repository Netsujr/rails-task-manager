<div class="container">
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= link_to "Return Home", tasks_path, class: "btn btn-default btn-secondary" %>
  <% end %>
</div>
